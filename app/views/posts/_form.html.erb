<%= render 'shared/form_error_alerts', obj: @post %>

<div class="well">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
    <br>
    <div>
      <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label(class: 'checkbox inline') { b.check_box(class: 'checkbox') + ' ' + b.text } %>
      <% end %>
    </div>
    
    <br>
    <%= f.submit "Submit Post", class: 'btn btn-primary' %>
  <% end %>
</div>