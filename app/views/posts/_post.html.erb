<div class="row">
  <div class="span0 well text-center">
    <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br>
    <span id='post_<%= post.slug %>_votes'><%= post.total_votes %> votes</span>
    <br>
    <%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>
  <div class="span8 well">
    <%= render post.categories %>

    <h4><%= link_to post.title, post_path(post) %></h4>
    <p><%= post.description %></p>
    <strong>Link: <%= link_to post.url, fix_url(post.url) %></strong>
    <p>
      <span class="quiet">posted by</span> <%= link_to post.user.username, user_path(post.user) %>
      <small>at <%= display_datetime(post.created_at) %></small>
    </p>
    <small><span><%= link_to("#{post.comments.size} comments", post_path(post)) %></span></small>
    <small><span><%= link_to "*edit*", edit_post_path(post) %></span></small>
  </div>
</div>